<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>


<%= form_tag "/pacientes", method: "GET" do %>
  <%= label_tag :search_by_first_name %>
  <%= text_field_tag :search_by_first_name, params[:search_by_first_name] %>
  <%= label_tag :search_by_last_name %>
  <%= text_field_tag :search_by_last_name, params[:search_by_last_name] %>
  <%= label_tag :search_by_phone %>
  <%= text_field_tag :search_by_phone, params[:search_by_phone] %>
  <%= submit_tag "Search" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Historial</th>
      <th>Estado de estudios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.first_name %></td>
        <td><%= paciente.last_name %></td>
        <td><%= paciente.phone %></td>
        <td><%= paciente.email %></td>
        <td><%= paciente.historial %></td>
        <td><%= paciente.status_type %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paciente', new_paciente_path %>
