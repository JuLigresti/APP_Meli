<p id="notice"><%= notice %></p>

<h1>Estudios</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Paciente</th>
      <th>Estudio type</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estudios.each do |estudio| %>
      <tr>
        <td><%= estudio.date %></td>
        <td><%= estudio.paciente_id %></td>
        <td><%= estudio.estudio_type_id %></td>
        <td><%= estudio.comments %></td>
        <td><%= link_to 'Show', estudio %></td>
        <td><%= link_to 'Edit', edit_estudio_path(estudio) %></td>
        <td><%= link_to 'Destroy', estudio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

